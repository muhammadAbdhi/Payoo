<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:id="@+id/r3pcksev2m7q"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFFFF"
        android:paddingBottom="38dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rx4gvfd5yvqc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#FFFFFFFF"
                android:paddingVertical="23dp"
                android:paddingHorizontal="25dp"
                android:layout_marginBottom="30dp"
                android:elevation="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/rcv8pmg92bhq"
                    android:layout_width="8dp"
                    android:layout_height="17dp"
                    android:layout_marginEnd="89dp"
                    android:src="@drawable/back"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/r7f5lhwdtcb"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:text="Detail Produk"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/rv0a455dyxjh"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="38dp"
                android:layout_marginHorizontal="105dp"
                android:src="@drawable/burger"
                android:scaleType="fitXY"
                />
        <LinearLayout
        android:id="@+id/rebmpn0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="37dp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/rg845rcv2769"
                android:textColor="#2E2E2E"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Nama produk :"
                />
            <TextView
                android:id="@+id/tv_nama_produk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Classic Burger"/>

        </LinearLayout>


            <LinearLayout
                android:id="@+id/rebmpn0ek52p"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="37dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rgfek8sum2pr"
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Harga produk : "
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/rijj5v3l8si"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Rp. 25.000 (Offline)"
                        />
                    <TextView
                        android:id="@+id/r5qa4pyl351m"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp"

                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Rp. 30.000 (Gojek)"
                        />
                    <TextView
                        android:id="@+id/r8fha8id6xuk"
                        android:textColor="#2E2E2E"
                        android:textSize="16sp"

                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Rp. 29.500 (Grab)"
                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rebm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="37dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kategori"
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Kategori produk :"
                    />
                <TextView
                    android:id="@+id/tv_kategori_produk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Makanan"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ru5n6fssu37k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="13dp"
                android:layout_marginHorizontal="37dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rzoex7na5g"
                    android:textColor="#2E2E2E"
                    android:textSize="16sp"
                    android:layout_marginEnd="9dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Komposisi :"
                    />
                <LinearLayout
                    android:id="@+id/r6m330y26jhb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                   <androidx.recyclerview.widget.RecyclerView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:listitem="@layout/card_list_komposisi_detail"
                       />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rc5ie6qsyrcf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="37dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/rql7e9l6wqpa"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_edit_text"
                    android:paddingVertical="21dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/r1l8omhg50z3"
                        android:textColor="#2FA36B"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Edit produk"
                        />
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:id="@+id/rg27ctf3jlh"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_edit_text"
                    android:paddingVertical="21dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/r6j4vde2pa6c"
                        android:textColor="#959595"
                        android:textSize="12sp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Hapus produk"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
