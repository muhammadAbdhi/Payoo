<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Utama"
    tools:context=".ui.authentication.LoginActivity">


    <ImageView
        android:id="@+id/imageViewCircleGradient"
        android:layout_width="700dp"
        android:layout_height="700dp"
        android:layout_marginTop="201dp"
        android:src="@drawable/gradient_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewCircle"
        android:layout_width="800dp"
        android:layout_height="800dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018" />

    <TextView
        android:id="@+id/Judul"
        android:layout_width="211dp"
        android:layout_height="51dp"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:text="PAYOO"
        android:textColor="@color/white"
        android:textSize="80px"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCircleGradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand"
        android:text="Point Of Sales"
        android:textColor="@color/white"
        android:textSize="30px"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Judul" />

    <EditText
        android:id="@+id/et_emai"
        android:textSize="12dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="39dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/quicksand_bold"
        android:hint="email/nomor ponsel"
        android:paddingLeft="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewCircleGradient"
        app:layout_constraintVertical_bias="0.073"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_pw"
        android:textSize="12dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_edit_text"
        android:fontFamily="@font/quicksand_bold"
        android:hint="kata sandi"
        android:paddingLeft="35dp"
        app:layout_constraintEnd_toEndOf="@+id/et_emai"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_emai"
        app:layout_constraintTop_toBottomOf="@+id/et_emai"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/circularButton"
        android:layout_width="280dp"
        android:textSize="14dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_btn"
        android:fontFamily="@font/quicksand_bold"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:text="MASUK"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_pw"
        app:layout_constraintStart_toStartOf="@+id/et_pw"
        app:layout_constraintTop_toBottomOf="@+id/et_pw" />

    <LinearLayout
        android:id="@+id/btn_google"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_btn_google"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="@+id/circularButton"
        app:layout_constraintStart_toStartOf="@+id/circularButton"
        app:layout_constraintTop_toBottomOf="@+id/circularButton">

        <ImageView
            android:id="@+id/google"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginEnd="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/google" />

        <TextView
            android:id="@+id/text_google"
            android:fontFamily="@font/quicksand_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk dengan Google "
            android:textColor="#2E2E2E"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_belum_punya_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Belum Punya Akun? Daftar"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_google"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_link_belum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:autoLink="web"
        android:clickable="true"
        android:fontFamily="@font/quicksand_bold"
        android:onClick="navigateToRegistrationPage"
        android:text="Disini"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/text_belum_punya_akun"
        app:layout_constraintTop_toTopOf="@+id/text_belum_punya_akun" />

    <TextView
        android:id="@+id/text_lupa_sandi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autoLink="web"
        android:clickable="true"
        android:fontFamily="@font/quicksand_bold"
        android:onClick="navigateToRegistrationPage"
        android:text="Lupa Kata Sandi?"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_belum_punya_akun" />


</androidx.constraintlayout.widget.ConstraintLayout>
